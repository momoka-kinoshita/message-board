<h1>curry shop 一覧</h1>

<% if @messages.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>curry shop</th>
        <th>場所</th>
        <th>定休日</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= link_to message.id, message %></td>
          <td><%= message.title %></td>
          <td><%= message.place %></td>
          <td><%= message.day %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>

<%= link_to '新規curryの投稿', new_message_path, class: "btn btn-primary" %>